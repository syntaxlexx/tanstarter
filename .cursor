{
  "rules": {
    "component-naming": {
      "pattern": "^[a-z]+(-[a-z]+)*\\.(tsx|jsx)$",
      "message": "Component files must use kebab-case naming (e.g., 'my-component.tsx')",
      "severity": "error",
      "include": [
        "src/**/*.tsx",
        "src/**/*.jsx"
      ],
      "exclude": [
        "src/**/*.test.tsx",
        "src/**/*.test.jsx",
        "src/**/*.spec.tsx",
        "src/**/*.spec.jsx"
      ]
    }
  }
}
